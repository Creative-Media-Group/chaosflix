<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LeanbackAppTheme" parent="@style/Theme.Leanback">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item><!--loading-spinner-->
		<item name="defaultBrandColor">@color/brand</item><!--sidebar-->
		<item name="defaultBrandColorDark">@color/brand_dark</item>
		<item name="defaultSearchColor">@color/accent</item>
	</style>


    <style name="ChaosflixLeanbackPreferences" parent="Theme.Leanback">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Leanback</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorPrimary">@color/primary</item>
    </style>

    <style name="TitleOnlyStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="lbImageCardViewType">Title</item>
    </style>

    <style name="TitleAndDescriptionStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="lbImageCardViewType">Title|Content</item>
    </style>

    <style name="DefaultCardStyle" parent="Widget.Leanback.ImageCardViewStyle">
        <item name="cardBackground">@null</item>
    </style>

    <style name="FlexLineTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:minLines">1</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="FlexLineContentStyle" parent="Widget.Leanback.ImageCardView.ContentStyle">
        <item name="android:minLines">2</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="FixedLineTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="FixedLineContentStyle" parent="Widget.Leanback.ImageCardView.ContentStyle">
        <item name="android:minLines">3</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="ConferenceCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">@dimen/conference_card_width</item>
        <item name="android:layout_height">@dimen/conference_card_height</item>
    </style>

    <style name="EventCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">@dimen/event_card_width</item>
        <item name="android:layout_height">@dimen/event_card_height</item>
    </style>

    <style name="ConferenceCardStyle" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/TitleOnlyStyle</item>
        <item name="imageCardViewTitleStyle">@style/FlexLineTitleStyle</item>
        <item name="imageCardViewImageStyle">@style/ConferenceCardImageStyle</item>
    </style>

    <style name="EventCardStyle" parent="Theme.Leanback">
        <item name="imageCardViewTitleStyle">@style/FlexLineTitleStyle</item>
        <item name="imageCardViewContentStyle">@style/FlexLineContentStyle</item>
        <item name="imageCardViewImageStyle">@style/EventCardImageStyle</item>
    </style>

    <style name="SettingsCardStyle" parent="Theme.Leanback">
        <item name="imageCardViewStyle">@style/IconCardViewStyle</item>
        <item name="imageCardViewTitleStyle">@style/IconCardTitleStyle</item>
        <item name="imageCardViewImageStyle">@style/IconCardImageStyle</item>
        <item name="imageCardViewInfoAreaStyle">@style/IconCardInfoAreaStyle</item>
    </style>

    <style name="EventGridCardStyle" parent="EventCardStyle">
        <item name="imageCardViewTitleStyle">@style/FixedLineTitleStyle</item>
        <item name="imageCardViewContentStyle">@style/FixedLineContentStyle</item>
    </style>

    <style name="IconCardViewStyle" parent="DefaultCardStyle">
        <item name="lbImageCardViewType">Title</item>
    </style>

    <style name="IconCardTitleStyle" parent="Widget.Leanback.ImageCardView.TitleStyle">
        <item name="android:maxLines">2</item>
        <item name="android:minLines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconCardImageStyle" parent="Widget.Leanback.ImageCardView.ImageStyle">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="IconCardInfoAreaStyle" parent="Widget.Leanback.ImageCardView.InfoAreaStyle">
        <item name="android:layout_width">96dp</item>
        <item name="android:background">@null</item>
        <item name="layout_viewType">main</item>
    </style>
</resources>
